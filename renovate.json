{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "groupName": "Vite",
      "matchPackagePrefixes": [
        "@vitejs/"
      ],
      "matchPackageNames": [
        "vite"
      ]
    },
    {
      "matchPackageNames": [
        "vue",
        "vue-loader"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    }
  ]
}
